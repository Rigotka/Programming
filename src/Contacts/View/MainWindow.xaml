<Window x:Name="MainWin" x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Contacts" Height="300" Width="500" ResizeMode="NoResize">
    <Grid x:Name="MainGrid" Margin="15" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox x:Name="EditContactGroupBox" Grid.Column="0" Header="Edit Contact" Margin="3"  >
            <StackPanel Margin="0" >
                <Label x:Name="EditNameLabel" Content="Name:" Padding="0" Margin="3"/>
                <TextBox x:Name="EditNameTextBox" Text="Смирнов Юрий" Margin="3" VerticalContentAlignment="Bottom"/>
                <Label x:Name="EditPhoneNumberLabel" Content="Phone Number:" Padding="0" Margin="3"/>
                <TextBox x:Name="EditPhoneNumberTextBox" Text="+7-913-111-22-33" Margin="3" VerticalContentAlignment="Center"/>
                <Label x:Name="EditEmailLabel" Content="Email:" Padding="0" Margin="3"/>
                <TextBox x:Name="EditEmailTextBox" Text="TextBox" Margin="3" VerticalContentAlignment="Center"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="ReadContactGroupBox" Grid.Column="1" Header="Read Contact"  Margin="3"  >
            <StackPanel Margin="0" >
                <Label x:Name="ReadNameLabel" Content="Name:" Padding="0" Margin="3"/>
                <Label x:Name="ReadNameValueLabel" Content="Смирнов Юрий" Padding="0" Margin="3" FontWeight="Bold"/>
                <Label x:Name="ReadPhoneNumberLabel" Content="Phone Number:" Padding="0" Margin="3"/>
                <Label x:Name="ReadPhoneNumberValueLabel" Content="+7-913-111-22-33" Padding="0" Margin="3" FontWeight="Bold"/>
                <Label x:Name="ReadEmailLabel" Content="Email:" Padding="0" Margin="3"/>
                <Label x:Name="ReadEmailValueLabel" Content="segey__sorokin.1580@mail.ru" Padding="0" Margin="3" FontWeight="Bold"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="LoadButton" Command="{Binding LoadCommand}" Content="Load" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Height="25" Margin="3"/>
        <Button x:Name="SaveButton" Command="{Binding SaveCommand}" Content="Save" Grid.Column="1" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="75" Height="25" Margin="0,3,83.2,3"/>


    </Grid>
</Window>
